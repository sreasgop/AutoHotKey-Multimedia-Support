; Quick Access to Applications using Right Windows + Function Keys
RWin & F3:: {
    Run "calc.exe" ; Right Windows + F3 to launch the Calculator Application
}

RWin & F4:: {
    Run "vlc.exe" ; Right Windows + F5 to launch the default media player
}



; Media controls using Right Windows key + Function keys
RWin & F5:: {
    Send "{Media_Prev}" ; Right Windows + F5 to move to the previous track
}

RWin & F6:: {
    Send "{Media_Next}" ; Right Windows + F6 to move to the next track
}

RWin & F7:: {
    Send "{Media_Play_Pause}" ; Right Windows + F7 to play/pause the media
}

RWin & F8:: {
    Send "{Media_Stop}" ; Right Windows + F8 to stop the media
}



; Custom volume buttons using Right Windows Key + Function keys
RWin & F9:: {
    Send "{Volume_Mute}" ; Right Windows + F9 to mute/unmute
}

RWin & F10:: {
    Send "{Volume_Down}" ; Right Windows + F10 to decrease volume
}


RWin & F11:: {
    Send "{Volume_Up}" ; Right Windows + F11 to increase volume
}
